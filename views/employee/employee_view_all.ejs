<!DOCTYPE html>
<html>

<head>
    <title> Employee - View All </title>
</head>
    <body>
        <h1> Employees </h1>
        <% if(locals.was_successful) { %>
        <div>
            <div id="message">
                was successfully Deleted.
            </div>
        </div>
        <% } %>
        <a href="/employee/add">Add New Employee</a> <br />

        <table border = "1">
            <tr>

                <th>SSN </th>
                <th>Name </th>
                <th> Wage </th>
                <th>Address</th>
                <th> Company </th>
                <th> Actions </th>

            </tr>
            <% for(var i = 0; i < result.length; i++){ %>
                <tr>

                    <td><%= result[i].ssn %></td>
                    <td><%= result[i].fname + ' ' + result[i].lname %></td>
                    <td><%= result[i].wage %></td>
                    <td><%= result[i].street %>,
                    <%= result[i].city %>,
                    <%= result[i].state %>,
                    <%= result[i].zip_code %></td>
                    <td><%= result[i].company_name %></td>
                    <td><a href="/employee/edit/?emp_id=<%= result[i].emp_id %>">
                            Edit
                        </a>
                        <a href='/employee/delete/?emp_id=<%= result[i].emp_id %>'>
                            Delete
                        </a>

                    </td>
                </tr>
            <% } %>
        </table>

    </body>
</html>